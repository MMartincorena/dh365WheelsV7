<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css"
    />
    <link rel="stylesheet" href="/css/admin/tablaCRUD.css" />
    <%- include('../partials/head.ejs')%>
    <title>Usuarios</title>
  </head>
  <body>
    <%- include('../partials/header.ejs')%>
    <div class="estructura">
        <table>
          <thead>
            <!-- cabecera -->
            <tr class="filaColor">
              <th scope="col" class="colID">ID</th>
              <th scope="col">Nombre</th>
              <th scope="col">Apellido</th>
              <th scope="col">Email</th>
              <th scope="col">Avatar</th>
              <th scope="col">Acci√≥n</th>
            </tr>
          </thead>

          <tbody>
            <!-- cuerpo con los datos de la tabla -->
            <% usuarios.forEach(usuario => { %>
            <tr class="filaDatos">
              <td class="filaDatos"><%= usuario.id %></td>
              <td><%= usuario.nombre %></td>
              <td><%= usuario.apellido %></td>
              <td><%= usuario.email %></td>
              <td><%= usuario.avatar %></td>
              <td class="colBotones">
                <button class="btnModificar" onclick="window.location.href='/usuarios/<%=usuario.id%>/modificar'">
                  <i class="bx bx-message-square-edit"></i>
                </button>
                <button class="btnEliminar" onclick="window.location.href='/usuarios/<%=usuario.id%>/eliminar'">
                  <i class="bx bx-message-square-minus"></i>
                </button>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <button class="btnCrear" onclick="window.location.href='/usuarios/registrar'"><i class='bx bx-message-square-add' ></i> Crear</button>
      </div>
  </body>
</html>
